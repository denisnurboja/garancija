<h1>Registracije</h1>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Product</th>
      <th>Serial</th>
      <th>Store</th>
      <th>Purchased at</th>
      
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @registrations.each do |registration| %>
      <tr>
      <td><%= "#{registration.user.first_name} #{registration.user.last_name}" %></td>
      <td><%= registration.product.model %></td>
        <td><%= registration.serial %></td>
        <td><%= registration.store %></td>
        <td><%= registration.purchased_at %></td>
        
        
        <td><%= link_to 'Show', registration %></td>
        <td><%= link_to 'Edit', edit_registration_path(registration) %></td>
        <td><%= link_to 'Destroy', registration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Registration', new_registration_path, class: 'btn btn-success'%>

