<h1>Reglists for product <%= @product.model %></h1>

<table class="table">
  
  <% @product.registrations.each do |prodreg| %>
  <tr>
    <td><%= link_to "#{prodreg.user.first_name}", user_path(prodreg.user) %> </td> 
    <td><%= prodreg.serial %> </td> 
    <td><%= link_to 'Show', registration_path(prodreg) %></td>
  </tr>
  <% end %>
</table>
<%= link_to 'Back', products_path, class: 'btn btn-success' %>
  
